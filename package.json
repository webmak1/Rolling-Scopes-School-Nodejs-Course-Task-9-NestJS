{
  "name": "rs-rest-service-starter",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "description": "REST service starter for RS School",
  "main": "src/server.ts",
  "scripts": {
    "build": "NODE_PATH=./src tsc",
    "start": "NODE_PATH=./src ts-node src/server.ts",
    "nodemon": "NODE_PATH=./src nodemon",
    "dev": "yarn db:migrate && yarn db:seed && yarn nodemon",
    "lint": "NODE_PATH=./src eslint --ext .js,.ts --fix src/",
    "test": "NODE_PATH=./src cross-env DEBUG=rs:* jest --testMatch \"<rootDir>/test/e2e/test/*.test.js\" --noStackTrace --runInBand --watch",
    "test:auth": "NODE_PATH=./src cross-env DEBUG=rs:* TEST_MODE=auth jest --noStackTrace",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js --config=src/ormconfig.ts",
    "db:drop": "NODE_PATH=./src yarn typeorm schema:drop",
    "db:create": "NODE_PATH=./src yarn typeorm migration:generate -- -n",
    "db:migrate": "NODE_PATH=./src yarn typeorm migration:run",
    "db:seed": "NODE_PATH=./src ts-node ./node_modules/typeorm/cli.js --config=src/ormseedconfig.ts migration:run"
  },
  "keywords": [
    "rs",
    "school",
    "rest",
    "node",
    "express",
    "autotest",
    "starter"
  ],
  "license": "ISC",
  "engines": {
    "node": ">=14.0.0 <15"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint"
    ]
  },
  "dependencies": {
    "cross-env": "7.0.3",
    "dotenv": "9.0.2",
    "express": "4.17.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "4.1.6",
    "typeorm": "^0.2.34",
    "uuid": "8.3.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.2",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.6.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "bcryptjs": "^2.4.3",
    "chai": "4.3.4",
    "debug": "4.3.1",
    "dirty-chai": "2.0.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "nodemon": "2.0.7",
    "prettier": "2.2.1",
    "supertest": "6.1.3",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
